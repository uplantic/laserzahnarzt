    <div class="grid grid-cols-1 gap-12 md:grid-cols-3">
      <!-- Column 1: Office Hours -->
      <div>
        <h3 class="mb-6 text-lg font-semibold text-gray-900">Sprechzeiten</h3>
        <div class="space-y-4 text-sm text-gray-600">
          <div>
            <div class="font-medium text-gray-900">Montag</div>
            <div>08.00 – 13.00 Uhr</div>
            <div>14.00 – 18.00 Uhr</div>
          </div>
          <div>
            <div class="font-medium text-gray-900">Dienstag</div>
            <div>08.00 – 13.00 Uhr</div>
            <div>14.00 – 18.00 Uhr</div>
          </div>
          <div>
            <div class="font-medium text-gray-900">Mittwoch</div>
            <div>08.00 – 14.00 Uhr</div>
          </div>
          <div>
            <div class="font-medium text-gray-900">Donnerstag</div>
            <div>08.00 – 13.00 Uhr</div>
            <div>14.00 – 18.00 Uhr</div>
          </div>
          <div>
            <div class="font-medium text-gray-900">Freitag</div>
            <div>08.00 – 13.00 Uhr</div>
          </div>
        </div>
      </div>

      <!-- Column 2: Contact Information -->
      <div>
        <h3 class="mb-6 text-lg font-semibold text-gray-900">Kontakt</h3>
        <div class="space-y-4 text-sm text-gray-600">
          <div>
            <div class="font-medium text-gray-900">Zahnarzt Dirk Conrad</div>
            <div>Hildesheimerstr. 356</div>
            <div>30880 Laatzen/OT Rethen</div>
          </div>
          <div>
            <div>Telefon: <a href="tel:+4951029013144" class="text-blue-600 hover:text-blue-800"><a href="tel:05102913144">05102 - 91 31 44</a></a></div>
            <div>Telefax: 05102 - 91 31 55</div>
          </div>
          <div>
            <div>
              <a href="mailto:kontakt@laserzahnarzt-laatzen.de" class="text-blue-600 hover:text-blue-800"> kontakt@laserzahnarzt-laatzen.de </a>
            </div>
